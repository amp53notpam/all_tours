{% extends 'layout.jinja2' %}

{% block title %}{{ _('Nuovo Albergo') }}{% endblock %}

{% block header %}
{{ header }}
{% endblock %}

{% block content %}
<div class="w3-card-4 w3-padding-large" style="max-width: 600px; margin: auto; margin-top: 80px">
    <div class="w3-container w3-padding-24">
        <h2 class="w3-center w3-theme-d2">{{ _('Nuovo albergo') }}</h2>
    </div>

    <form method="POST" enctype="multipart/form-data">
        {{ form.csrf_token }}

        {# Tappa #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.lap.label(class="w3-theme-l4 w3-left-align wbold form_label required") }}
            </div>
            <div class="w3-col m7 w3-mobile tooltip">
                {{ form.lap(class="w3-left-align w3-input w3-theme-l4") }}
                <span class="w3-monospace tooltiptext"></span>
            </div>
        </div>

        {# nome #}
         <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.name.label(class="w3-theme-l4 w3-left-align wbold form_label required") }}
            </div>
            <div class="w3-col m7 w3-mobile tooltip">
                {{ form.name(class="w3-left-align w3-input w3-theme-l4") }}
                <span class="w3-monospace tooltiptext"></span>
            </div>
        </div>

        {# indirizzo #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.address.label(class="w3-theme-l4 w3-left-align wbold form_label required") }}
            </div>
            <div class="w3-col m7 w3-mobile tooltip">
                {{ form.address(class="w3-left-align w3-input w3-theme-l4") }}
                <span class="w3-monospace tooltiptext"></span>
            </div>
        </div>

        {# città #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.town.label(class="w3-theme-l4 w3-left-align wbold form_label required") }}
            </div>
            <div class="w3-col m7 w3-mobile tooltip">
                {{ form.town(class="w3-left-align w3-input w3-theme-l4") }}
                <span class="w3-monospace tooltiptext"></span>
            </div>
        </div>

        {# telefono #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.phone.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile">
                {{ form.phone(class="w3-left-align w3-input w3-theme-l4", pattern="^(\+[0-9]{1,3} )?[0-9]{2,4} ?[0-9]{3} ?[0-9]+$") }}
            </div>
        </div>

        {# e-mail #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.email.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile tooltip">
                {{ form.email(class="w3-left-align w3-input w3-theme-l4") }}
                <span class="w3-monospace tooltiptext"></span>
            </div>
        </div>

        {# giorni di soggiorno #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.stay.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile">
                {{ form.stay(class="w3-left-align w3-input w3-theme-l4", value="1") }}
            </div>
        </div>

        {# costo #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.price.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile">
                {{ form.price(class="w3-left-align w3-input w3-theme-l4") }}
            </div>
        </div>

        {# web site #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.website.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile">
                {{ form.website(class="w3-left-align w3-input w3-theme-l4") }}
            </div>
        </div>

        {# foto #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.photo.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile">
                {{ form.photo(class="w3-left-align w3-input w3-theme-l4", accept=".webp,.jpg,.jpeg") }}
            </div>
        </div>

        {# coordinate geografiche #}
        <div class="w3-container w3-row form-group" style="margin-bottom: 10px">
            <div class="w3-col m5 w3-mobile">
                {{ form.geo_lat.label(class="w3-theme-l4 w3-left-align wbold form_label") }}
            </div>
            <div class="w3-col m7 w3-mobile" style="display: flex; flex-wrap: nowrap; justify--content: space-between;">
                {{ form.geo_lat(class="w3-left-align w3-input w3-theme-l4", style="width: 45%;") }}
                <div style="width: 10%"></div>
                {{ form.geo_long(class="w3-left-align w3-input w3-theme-l4", style="width: 45%;") }}
            </div>
        </div>

        {# prenotazione #}
        <div class="w3-container" style="margin-bottom: 10px">
            <p>
                {{ form.reserved(class="w3-theme-l4 w3-center", style="margin-left: 40%") }} {{ form.reserved.label }}
            </p>
        </div>

        {# submit #}
        <div style="margin-bottom: 20px; margin-top:30px;">
            <p class="w3-center">
                {{ form.submit(class="w3-center w3-button w3-theme-action w3-hover-theme-d2 w3-ripple w3-center", style="width: 30%") }}
            </p>
        </div>
    </form>
  </div>
{% endblock %}

{% block scripts %}
<script>
const form = document.querySelector("form");
const lap = document.querySelector("#lap");
const name = document.querySelector("#name");
const address = document.querySelector("#address");
const town = document.querySelector("#town");

form.addEventListener("submit", checkInput);

function resetTooltip(tooltip) {
    tooltip.textContent = "";
    tooltip.style.display= "none";
}

function checkInput(evt) {
    let tooltip
    tooltip = document.querySelector("#lap ~ [class~=tooltiptext]");
    if (! lap.value){
        tooltip.textContent = "{{ _('Specificare la tappa.') }}";
        tooltip.style.display = "block";
        evt.preventDefault();
        return;
    } else {
        resetTooltip(tooltip);
    }

    tooltip = document.querySelector("#name ~ [class~=tooltiptext]");
    if (! name.value){
        tooltip.textContent = "{{ _('Inserire il nome dell\'albergo.') }}";
        tooltip.style.display = "block";
        evt.preventDefault();
        return;
    } else {
        resetTooltip(tooltip);
    }

    tooltip = document.querySelector("#address ~ [class~=tooltiptext]");
    if (! address.value){
        tooltip.textContent = "{{ _('Inserire l\'indirizzo dell\'albergo.') }}";
        tooltip.style.display = "block";
        evt.preventDefault();
        return;
    } else {
        resetTooltip(tooltip);
    }

    tooltip = document.querySelector("#town ~ [class~=tooltiptext]");
    if (! town.value){
        tooltip.textContent = "{{ _('Inserire la città.') }}";
        tooltip.style.display = "block";
        evt.preventDefault();
        return;
    } else {
        resetTooltip(tooltip);
    }
}

let error = "";
{% for err in form.email.errors %}error += "{{ err }}, "{% endfor %}
if (error) {
    tooltip = document.querySelector("#email ~ [class~=tooltiptext]");
    tooltip.textContent = error.slice(0, -2)
    tooltip.style.display = "block";
}
</script>
{% endblock %}
