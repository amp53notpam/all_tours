{% extends 'layout.jinja2' %}

{% block header %}
{{ header if header is not none else super() }}
{% endblock %}

{% block content %}
<div class="w3-card-4" style="max-width: 480px; margin: auto; margin-top: 80px">
    <div class="w3-container">
    <h2 class="w3-theme-d2 w3-center">{{ _('Nuovo Utente') }}</h2>
    </div>
    <form method="POST">
        {{ form.csrf_token }}
        <div class="w3-container">
            <div class="w3-row">
                <div class="w3-col m4 w3-mobile">
                    <p class="w3-left-align wbold form_label">{{ form.username.label(class="w3-theme-l4 required") }}</p>
                </div>
                <div class="w3-col m8 w3-mobile">
                    <p class="w3-left-align">{{ form.username(class="w3-input w3-theme-l4") }}</p>
                </div>

                <div class="w3-col m4 w3-mobile">
                    <p class="w3-left-align wbold form_label">{{ form.password.label(class="w3-theme-l4 required") }}</p>
                </div>
                <div class="w3-col m8 w3-mobile">
                    <p class="w3-left-align">{{ form.password(class="w3-input w3-theme-l4") }}</p>
                </div>

                <div class="w3-col m4 w3-mobile">
                    <p class="w3-left-align wbold form_label">{{ form.email.label(class="w3-theme-l4 required") }}</p>
                </div>
                <div class="w3-col m8 w3-mobile">
                    <p class="w3-left-align">{{ form.email(class="w3-input w3-theme-l4") }}</p>
                </div>
            </div>
            <p>{{ form.submit(class="w3-button w3-block w3-theme-action w3-hover-theme-d2 w3-ripple w3-center") }}</p>
        </div>
    </form>
</div>
{% endblock %}