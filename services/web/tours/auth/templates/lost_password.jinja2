{% extends 'layout.jinja2' %}

{% block header %}
{{ header if header is not none else super() }}
{% endblock %}

{% block content %}
<div class="w3-card-4" style="max-width: 500px; margin: auto; margin-top: 80px">
    <div class="w3-container w3-padding-24">
    <h2 class="w3-theme-d2 w3-center">Recupero Password</h2>
    <p class="w3-center">{{ _("Inserisci il tuo 'Username' e poi premi 'Invia'") }}</p>
    </div>
    <form method="POST">
        {{ form.csrf_token }}
        <p>
        {{ form.username(class="w3-input w3-theme-l4", placeholder="Username", style="width: 90%; margin-left: 5%") }}
        </p>
        <p class="w3-center">
        {{ form.submit(class="w3-section w3-button w3-theme-action w3-hover-theme-d2 w3-ripple") }}
        </p>
    </form>
 </div>

{% endblock %}
