{% extends 'layout.jinja2' %}

{% block styles %}
<style>
	h1 {
		letter-spacing: 15px;
		text-shadow: 3px 3px;	
		font-size: 7rem;
	}
</style>
{% endblock %}

{% block nav %}
	<a id="init_db" href="{{ url_for('set_up_database') }}" class="w3-bar-item w3-button w3-hover-amber w3-right" style="display: none;" onclick='hide(event, "init_db")'>Init</a>
{% endblock %}

{% block header %}
	<div class="w3-display-container" style="height: 20rem;">
		<h1 class="w3-display-middle">{% block title %}Berlin Tour{% endblock %}</h1>
	</div>
{% endblock %}

{% block content %}
<div style="margin-top: 100px">
	<div class="w3-row-padding">
  		<div class="w3-third">
    		<img src="{{ url_for('static', filename='images/caldogno.jpg') }}" alt="panorama Caldogno" style="width: 100%"> 
  		</div>
  		<div class="w3-third">
			<img class="w3-opacity-min" src="{{ url_for('static', filename='images/bike_tour.jpg') }}" alt="ciclisti"  style="width: 100%"> 
  			</div>
  		<div class="w3-third">
			<img src="{{ url_for('static', filename='images/berlin.jpg') }}" alt="Berlino"  style="width: 100%"> 
		</div>
	</div>
</div>

{% endblock %}
{% block scripts %}
<script>
function hide(evt, id) {
  document.getElementById(id).style.display = "none";
  }
</script>
{% endblock %}
