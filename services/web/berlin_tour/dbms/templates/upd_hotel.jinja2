{% extends 'layout.jinja2' %}

{% block styles %}
.form_item {
  width: 90%;
  margin-left: 5%
}
{% endblock %}

{% block header %}
	<div class="w3-display-container" style="display: none">
    <h1>{% block title %}Hotel{% endblock %}</h1>
  </div>
{% endblock %}

{% block content %}
  <div class="w3-card-4" style="max-width: 400px; margin:auto; margin-top: 60px">
    <div class="w3-container w3-amber">
      <h2 class="w3-center">Aggiorna Hotel</h2>
      <h3 class="w3-center">{{ hotel.name }}</h3>
    </div>

  <form method="POST" enctype="multipart/form-data">
    {{ form.csrf_token }}
    <p class="form_item">
      {{ form.check_in.label(class="w3-sand") }}
      {% set checkin_date = hotel.check_in.strftime('%A %d %b') %}
      {{ form.check_in(class="w3-input w3-sand", value=checkin_date) }}
    </p>
    <p class="form_item">
      {{ form.check_out.label(class="w3-sand") }}
      {% set checkout_date = hotel.check_out.strftime('%d/%m/%Y') %}
      {{ form.check_out(class="w3-input w3-sand", value=checkout_date) }}
    </p>
    <p class="form_item">
      {{ form.price.label(class="w3-sand") }}
      {{ form.price(class="w3-input w3-sand") }}
    </p>
    <p class="form_item">
      {{ form.website.label(class="w3-sand") }}
      {{ form.website(class="w3-input w3-sand") }}
    </p>
    <p class="form_item">
      {{ form.photo.label(class="w3-sand") }}
      {{ form.photo(class="w3-input w3-sand") }}
    </p>
    <p>
      {% if hotel.reserved %}
        {{ form.reserved(checked='checked', class="w3-sand w3-center", style="margin-left: 40%") }} {{ form.reserved.label }}
      {% else %}
        {{ form.reserved(class="w3-sand w3-center", style="margin-left: 40%") }} {{ form.reserved.label }}
      {% endif %}
    </p>
    <p>
      {{ form.submit(class="w3-button w3-block w3-amber w3-hover-orange w3-center") }}
    </p>
  </form>
  </div>
{% endblock %}