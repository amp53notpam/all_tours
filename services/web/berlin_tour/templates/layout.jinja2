<!doctype html>
<html>
<head>
<title>{% block title %}{% endblock %} - Plannig</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/static/css/w3-styles.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
<style>
	body {
		font-size: 16px;
}
h1 {
	color: #2bf82b;	
	text-align: center;
	font-family: 'Permanent Marker', cursive;
}
.flash { 
	margin: auto;
	padding: 1em;
	border: 1px solid #377ba8;
	max-width: 450px;
	border-radius: 10px;
}
</style>
{% block styles %}{% endblock %}

</head>

<body class="w3-sand">
	<nav class="w3-bar w3-khaki">
		<a href="{{ url_for('lap_bp.index') }}" class="w3-bar-item w3-button w3-hover-amber">Home</a>
		<a href="{{ url_for('lap_bp.hotel_dashboard') }}" class="w3-bar-item w3-button w3-hover-amber w3-right">Alberghi</a>
		<a href="{{ url_for('lap_bp.lap_dashboard') }}" class="w3-bar-item w3-button w3-hover-amber w3-right">Tappe</a>
	</nav>

<section class="content">
  <header class="w3-container">
    {% block header %}{% endblock %}
  </header>
  {% for message in get_flashed_messages(category_filter='error') %}
    <div class="flash w3-pale-red w3-center">{{ message }}</div>
  {% endfor %}
  {% for message in get_flashed_messages(category_filter='info') %}
    <div class="flash w3-pale-green w3-center">{{ message }}</div>
  {% endfor %}
  {% block content %}{% endblock %}
</section>
{% block scripts %}{% endblock %}
</body>
</html>
